<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Keyword.mappers.user.UserMapper">
    <resultMap id="userVOResultMap" type="Keyword.user.domain.UserVO">
        <id property="userId" column="user_id"/>
        <result property="userPw" column="user_pw"/>
        <result property="userName" column="user_name"/>
        <result property="userEmail" column="user_email"/>
        <result property="userJoinDate" column="user_join_date"/>
        <result property="userLoginDate" column="user_login_date"/>
        <result property="userSignature" column="user_signature"/>
        <result property="userImg" column="user_img"/>
        <result property="userPoint" column="user_point"/>
    </resultMap>

    <select id="login" resultMap="userVOResultMap">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <insert id="register">
        INSERT INTO user(
            user_id
            , user_pw
            , user_name
            , user_email
        ) VALUES (
            #{userId}
            , #{userPw}
            , #{userName}
            , #{userEmail}
        )
    </insert>

    <update id="keepLogin">
        UPDATE user
        SET session_key = #{sessionId}
            , session_limit = #{sessionLimit}
        WHERE user_id = #{userId}
    </update>

    <select id="checkUserWithSessionKey" resultMap="userVOResultMap">
        SELECT *
        FROM user
        WHERE session_key = #{value}
    </select>

    <select id="dupCheck" resultType="Integer">
        SELECT COUNT(user_id)
        FROM user
        WHERE user_id = #{uncheckedId};
    </select>
</mapper>